<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005432"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewSize">
    <TextView
        android:id="@+id/text1"
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:text="This project was made by Melissa Beaton, Dean Mathieson, and Timothy Trebus of Group 7 for Foundations of Engineering Lab.
Educational materials can be found in the README folder of the app files. To contact the developer for feedback, please emai mbeaton2@mail.usf.edu..."
        android:textAlignment="center"
        android:textColor="#EDEBD1"
        android:textIsSelectable="true"
        android:textSize="18sp" />
    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"
        android:text="Back"/>
</RelativeLayout>
</ScrollView>